<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <%  newListItems.forEach(function(ite){ %>
      <form class="" action="/delete" method="post">

<!-- //always add name to input to get something from input -->
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= ite._id  %>" onchange="this.form.submit()">
        <p><%= ite.name  %></p>
      </div>
      <input type="hidden" name="listName" value="<%=listTitle%>">
      </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" value="<%= listTitle %>" name="list">+</button>
      </form>
  </div>

<%- include("footer") -%>
